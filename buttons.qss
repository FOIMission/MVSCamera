QPushButton#Preview {
    /* image属性会自动保持图片比例 */
    image: url(":/static/icons/preview.png");

    /* 设置按钮大小与图片匹配 */
    width: 70px;
    height: 70px;
    min-width: 70px;
    min-height: 70px;

    /* 完全透明背景 */
    background-color: transparent;
    border: none;
    color: transparent;  /* 隐藏文字 */
    padding: 0px;
}

QPushButton#Preview:hover {
    image: url(":/static/icons/preview_hover.png");
}

QPushButton#Preview:pressed {
    image: url(":/static/icons/preview_hover.png");
}

QPushButton#Preview:checked  {
    image: url(":/static/icons/pause.png");
}

QPushButton#Preview:checked:hover  {
    image: url(":/static/icons/pause_hover.png");
}

